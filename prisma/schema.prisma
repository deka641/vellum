generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  name         String?
  email        String   @unique
  passwordHash String
  avatarUrl    String?
  sites        Site[]
  media        Media[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Site {
  id                String   @id @default(cuid())
  name              String
  slug              String   @unique
  description       String?
  favicon           String?
  notificationEmail String?
  theme             Json     @default("{}")
  footer            Json     @default("{}")
  customHead        String?  @db.Text
  customFooter      String?  @db.Text
  userId            String
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  pages             Page[]
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([userId])
}

model Page {
  id                 String           @id @default(cuid())
  title              String
  slug               String
  description        String?
  metaTitle          String?
  ogImage            String?
  noindex            Boolean          @default(false)
  status             PageStatus       @default(DRAFT)
  isHomepage         Boolean          @default(false)
  showInNav          Boolean          @default(true)
  sortOrder          Int              @default(0)
  scheduledPublishAt DateTime?
  siteId             String
  site               Site             @relation(fields: [siteId], references: [id], onDelete: Cascade)
  blocks             Block[]
  formSubmissions    FormSubmission[]
  revisions          PageRevision[]
  deletedAt          DateTime?
  publishedAt        DateTime?
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt

  @@unique([siteId, slug])
  @@index([siteId])
  @@index([siteId, status])
  @@index([siteId, sortOrder])
  @@index([siteId, deletedAt])
  @@index([scheduledPublishAt, status])
}

enum PageStatus {
  DRAFT
  PUBLISHED
}

model Block {
  id        String   @id @default(cuid())
  type      String
  content   Json
  settings  Json     @default("{}")
  sortOrder Int      @default(0)
  pageId    String
  page      Page     @relation(fields: [pageId], references: [id], onDelete: Cascade)
  parentId  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([pageId])
  @@index([parentId])
  @@index([pageId, sortOrder])
}

model PageRevision {
  id        String   @id @default(cuid())
  pageId    String
  page      Page     @relation(fields: [pageId], references: [id], onDelete: Cascade)
  title     String
  blocks    Json
  note      String?
  createdAt DateTime @default(now())

  @@index([pageId, createdAt])
}

model Template {
  id          String   @id @default(cuid())
  name        String
  description String?
  thumbnail   String?
  category    String   @default("general")
  blocks      Json
  isSystem    Boolean  @default(false)
  userId      String?
  createdAt   DateTime @default(now())

  @@index([userId])
}

model FormSubmission {
  id        String   @id @default(cuid())
  pageId    String
  blockId   String
  data      Json
  createdAt DateTime @default(now())
  page      Page     @relation(fields: [pageId], references: [id], onDelete: Cascade)

  @@index([pageId])
  @@index([blockId])
  @@index([pageId, createdAt])
  @@index([pageId, blockId])
}

model PasswordResetToken {
  id        String    @id @default(cuid())
  token     String    @unique
  userId    String
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  @@index([token])
  @@index([userId])
}

model Media {
  id        String   @id @default(cuid())
  filename  String
  mimeType  String
  size      Int
  width     Int?
  height    Int?
  url       String
  alt       String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([userId, createdAt])
}
